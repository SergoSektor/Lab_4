<Window x:Class="CardGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="512" Width="417.5" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Меню" Grid.Column="1" HorizontalAlignment="Left" Margin="166,94,0,0" VerticalAlignment="Top" Height="46" Width="81" RenderTransformOrigin="1.671,0.904" FontSize="24"/>
        <Button Grid.ColumnSpan="2" Content="Начать новую игру" HorizontalAlignment="Left" Margin="118,188,0,0" VerticalAlignment="Top" Width="178" Height="46" FontSize="18" Click="Button_Click"/>
        <Button x:Name="LoadButton" Grid.ColumnSpan="2" Content="Загрузить игру" HorizontalAlignment="Left" Margin="118,312,0,0" VerticalAlignment="Top" Width="178" Height="46" FontSize="18" Click="LoadButton_Click"/>
        <Label x:Name="LoadLabel" Grid.ColumnSpan="2" Content="Есть незавершенная игра" HorizontalAlignment="Left" Margin="111,277,0,0" VerticalAlignment="Top" FontSize="15"/>

    </Grid>
</Window>
